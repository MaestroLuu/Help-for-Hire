<a href="/jobseeking/{{id}}" class="text-decoration-none border border-danger rounded text-dark m-3 transition-swipe"
    id="seekcard">
    <header class="border-bottom border-dark text-center p-2"><h3>{{job_name}}</h3></header>
    <div class="container-fluid d-flex justify-content-around text-center pt-2">
        <p class="border-bottom border-dark d-inline">{{zipcode}}</p>
        <p class="border-bottom border-dark d-inline">${{price}}</p>
    </div>
    <div class="d-flex justify-content-around text-center pb-2">{{time}}</div>
</a>