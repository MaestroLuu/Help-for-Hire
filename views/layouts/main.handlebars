<html lang='en'>
<head>
  <meta charset='UTF-8' />
  <meta http-equiv='X-UA-Compatible' content='IE=edge' />
  <meta name='viewport' content='width=device-width, initial-scale=1.0' />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel='stylesheet' href="/css/style.css">
  <title>{{title}}</title>
</head>

<body>
  <header>
    <nav class="d-flex col-12 justify-content-between p-2 bg-secondary">
      <div>
        <a href="/"><button class='btn btn-about-us'>About Us</button></a>
        {{!-- {{#if logged_in}} --}}
        <a href="/home"><button class='btn btn-home' id="home">Home</button></a>
        {{!-- {{/if}} --}}
      </div>
      <div>
        {{#if logged_in}}
        <a href ="/logout"><button class='btn btn-logout' id="logout">Log Out</button></a>
        <a href="/postjob"><button class='btn btn-postjob'>Post Job</button></a>
        {{else}}
        <a href="/login"><button class='btn btn-login'>Log In</button></a>
        <a href="/signup"><button class='btn btn-signup'>Sign Up</button></a>
        {{/if}}
      </div>
    </nav>
  </header>
  <main id="swup" class="transition-fade">
  {{{body}}}
  </main>  
  {{#if logged_in}}
  <script defer src="/swup/dist/swup.min.js"></script>
  <script defer src="/js/pageAnimation.js"></script>
  <script defer src="/js/makejob.js"></script>
  <script src="/js/logout.js"></script>
  {{/if}}
</body>

</html>