<h1 class="text-center mt-5">Login</h1>
<form class='login-form text-center m-3'>
  <label for='email' placeholder="Email (e.g. name@email.com)" class="m-3">Email</label><br />
  <input type='email' name='email' id='email' /><br />
  <label for='password' placeholder="Password" class="m-3">Password</label><br />
  <input type='password' name='password' id='password' /><br />
  <button class='btn btn-login m-3' type='submit'>Submit</button>
</form>
<p class="text-center">Don't have an account yet? <a href='/signup'>Sign Up Here</a></p>
<script src='/js/login.js'></script>